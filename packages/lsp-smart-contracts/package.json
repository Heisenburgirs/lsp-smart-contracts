{
  "name": "@lukso/lsp-smart-contracts",
  "version": "0.15.0-rc.0",
  "description": "The reference smart contract implementation for the LUKSO LSP standards",
  "license": "Apache-2.0",
  "author": "",
  "keywords": [
    "LUKSO",
    "LSP",
    "Blockchain",
    "Standards",
    "Smart Contracts",
    "Ethereum",
    "EVM",
    "Solidity"
  ],
  "directories": {
    "test": "tests"
  },
  "files": [
    "contracts/**/*.sol",
    "!contracts/Mocks/**/*.sol",
    "artifacts/*.json",
    "dist",
    "types",
    "!types/factories",
    "./README.md",
    "./CONTRIBUTING.md",
    "./LICENSE"
  ],
  "main": "./dist/constants.cjs",
  "module": "./dist/constants.mjs",
  "typings": "./dist/constants.d.ts",
  "exports": {
    ".": {
      "require": "./dist/constants.cjs",
      "import": "./dist/constants.mjs",
      "types": "./dist/constants.d.ts"
    },
    "./constants.js": {
      "require": "./dist/constants.cjs",
      "import": "./dist/constants.mjs",
      "types": "./dist/constants.d.ts"
    },
    "./constants": {
      "require": "./dist/constants.cjs",
      "import": "./dist/constants.mjs",
      "types": "./dist/constants.d.ts"
    },
    "./artifacts/*": "./artifacts/*",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "hardhat compile --show-stack-traces",
    "build:foundry": "forge build",
    "build:js": "unbuild",
    "build:types": "npx wagmi generate",
    "build:docs": "hardhat dodoc && prettier -w ./docs",
    "clean": "hardhat clean && rm -Rf dist/",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js",
    "lint:solidity": "solhint 'contracts/**/*.sol' && prettier --check 'contracts/**/*.sol'",
    "package": "hardhat prepare-package",
    "test": "hardhat test --no-compile tests/**/*.test.ts",
    "test:foundry": "FOUNDRY_PROFILE=lsp_smart_contracts forge test --no-match-test Skip -vvv",
    "test:coverage": "hardhat coverage",
    "test:benchmark": "hardhat test --no-compile tests/Benchmark.test.ts"
  },
  "dependencies": {
    "@lukso/lsp0-contracts": "workspace:*",
    "@lukso/lsp1-contracts": "workspace:*",
    "@lukso/lsp10-contracts": "workspace:*",
    "@lukso/lsp12-contracts": "workspace:*",
    "@lukso/lsp14-contracts": "workspace:*",
    "@lukso/lsp16-contracts": "workspace:*",
    "@lukso/lsp17-contracts": "workspace:*",
    "@lukso/lsp17contractextension-contracts": "workspace:*",
    "@lukso/lsp1delegate-contracts": "workspace:*",
    "@lukso/lsp2-contracts": "workspace:*",
    "@lukso/lsp20-contracts": "workspace:*",
    "@lukso/lsp23-contracts": "workspace:*",
    "@lukso/lsp25-contracts": "workspace:*",
    "@lukso/lsp3-contracts": "workspace:*",
    "@lukso/lsp4-contracts": "workspace:*",
    "@lukso/lsp5-contracts": "workspace:*",
    "@lukso/lsp6-contracts": "workspace:*",
    "@lukso/lsp7-contracts": "workspace:*",
    "@lukso/lsp8-contracts": "workspace:*",
    "@lukso/lsp9-contracts": "workspace:*",
    "@lukso/universalprofile-contracts": "workspace:*"
  },
  "devDependencies": {
    "hardhat": "^2.20.1"
  }
}
